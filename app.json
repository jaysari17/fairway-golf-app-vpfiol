
{
  "expo": {
    "name": "FAIRWAY",
    "slug": "fairway",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#57C8A1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fairway.golftracker",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "FAIRWAY needs access to your photo library to let you add course photos to your rounds.",
        "NSCameraUsageDescription": "FAIRWAY needs access to your camera to let you take photos of courses you play.",
        "NSPhotoLibraryAddUsageDescription": "FAIRWAY needs permission to save photos to your library."
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#57C8A1"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fairway.golftracker",
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.fairway.golftracker",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/app-icon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#57C8A1",
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200
        }
      ]
    ],
    "scheme": "fairway",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "description": "Track your golf journey. Log rounds, rate courses, and build your ultimate golf profile.",
    "primaryColor": "#57C8A1"
  }
}
